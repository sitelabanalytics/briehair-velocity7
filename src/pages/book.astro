---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Book">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Book an Appointment in Seconds</Fragment>
      <Fragment slot="desc">One of the Gold Coast's most recommended hair dressers.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">What we need from you.</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Book with unparalleled hair styling expertise and 
          personalized care.
          <br />
          Whether you're looking for a simple trim or a complete hair transformation, we'll work with you to 
          create a look that suits your individual style and personality.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>1/15 Azalea Avenue, Hollywell</span>
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:bryanwood5@bigpond.com"
              >bryanwood5@bigpond.com</a
            >
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+61 425 315 381">0425 315 381</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
